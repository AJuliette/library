<h1 class="h3 mb-3">Index tags</h1>
<div class="row">
  <% @tags.each do |tag| %>
    <div class="col-sm-12 col-lg-3 mb-3">
      <div class="card h-100 border-light text-white bg-dark mb-3">
        <div class="card-header">
          <h5 class="card-title" style="background-color:<%=tag.color%>;"><%= link_to "#{tag.name} (#{tag.links.count} articles)", tag_path(tag) %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>