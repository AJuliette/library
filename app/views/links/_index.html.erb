<div class="row">
  <% @links.each do |link| %>
    <div class="col-sm-12 col-lg-3 mb-3">
      <div class="card h-100 border-light text-white bg-dark mb-3">
        <div class="card-header">
          <h5 class="card-title"><%= link.title%></h5>
        </div>
        <div class="card-footer text-muted">
          <% link.tags.each do |tag| %>
            <span><%= tag.name %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>